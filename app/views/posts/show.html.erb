<%= page_title @post.title %>

<h4 class="lead"><%= @post.subtitle %></h4>
<em><%= post_meta(@post) %></em>

<p><%= @post.body %></p>

<div class="mt-3">
  <% if user_signed_in? %>
    <% if current_user == @post.user %>
      <%= link_to "Edit this post", edit_post_path(@post) %> |
    <% end %>
    <%= link_to "Back to posts", posts_path %>

    <% if current_user == @post.user %>
      <%= button_to "Delete", @post, method: :delete, class: "btn btn-danger mt-3 px-3", data: { confirm: "Are you sure?" } %>
    <% end %>
  <% end %>
</div>
