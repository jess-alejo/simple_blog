
<div class="row mt-5">
  <div class="col-lg">
  </div>
  <div class="col-lg">
    <h1>Login</h1>
    <%= form_with model: @user, url: sessions_path, method: :post, class: "mt-4" do |form| %>
      <div class="mb-3">
        <%= form.label :email, "Email address", class: "form-label" %>
        <%= form.email_field :email, class: "form-control", "aria-describedby" => "emailHelp"%>
        <%= error_message_for(@user, :email) %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
        <%= error_message_for(@user, :password) %>
      </div>
      <div class="mt-4">
        <%= form.submit "Login", class: "btn btn-primary px-5"%>
      </div>
    <% end %>
  </div>
  <div class="col-lg">
  </div>
</div>



